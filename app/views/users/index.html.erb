
<h2>Users</h2>

<div class="span9">

  <table class="datatable table table-bordered table-condensed">
    <thead>
      <tr>
        <th> Avatar</th>
        <th>Email</th>
        <th> Name </th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= image_tag user.image_url(:small).to_s %></td>
          <td><%= link_to user.email, user %></td>
          <td><%= user.first_name %></td>

        </tr>
      <% end %>
    </tbody>
  </table>
</div>